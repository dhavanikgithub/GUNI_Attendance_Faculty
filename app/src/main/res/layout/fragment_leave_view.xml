<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background"
    tools:context=".faculty.facultyfragments.ui.leavemodule.leaveview.LeaveViewFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Application Details"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"/>
            <LinearLayout
                android:id="@+id/layoutStudentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                android:layout_marginTop="@dimen/_40sdp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtEnrollment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"/>
                <TextView
                    android:id="@+id/txtStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layoutStudentInfo"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text="Application Type:"/>
                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/layoutType"
                app:layout_constraintStart_toStartOf="@id/layoutType"
                app:layout_constraintTop_toBottomOf="@+id/layoutType"
                app:layout_constraintVertical_bias="0.3"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text="Start Date:"/>
                <TextView
                    android:id="@+id/txtStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/layoutStartDate"
                app:layout_constraintStart_toStartOf="@id/layoutStartDate"
                app:layout_constraintTop_toBottomOf="@+id/layoutStartDate"
                app:layout_constraintVertical_bias="0.3"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text="End Date:"/>
                <TextView
                    android:id="@+id/txtEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/layoutEndDate"
                app:layout_constraintStart_toStartOf="@id/layoutEndDate"
                app:layout_constraintTop_toBottomOf="@+id/layoutEndDate"
                app:layout_constraintVertical_bias="0.3"
                android:weightSum="100"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:gravity="center"
                    android:text="Application Reason:" />

                <TextView
                    android:id="@+id/txtReason"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_weight="40"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="Your Reasone"
                    android:textColor="@color/white"
                    android:nestedScrollingEnabled="true"
                    android:background="@drawable/textview_background"
                    />
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="@+id/layoutReason"
                app:layout_constraintStart_toStartOf="@id/layoutReason"
                app:layout_constraintTop_toBottomOf="@+id/layoutReason"
                app:layout_constraintVertical_bias="0.3"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="#FFFFFF"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:gravity="center_vertical|start"
                        android:text="Status:"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="Pending"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/layoutDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/layoutStatus"
                app:layout_constraintStart_toStartOf="@id/layoutStatus"
                app:layout_constraintTop_toBottomOf="@+id/layoutStatus"
                app:layout_constraintVertical_bias="0.3"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text="Document:"
                    android:gravity="start"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDocumentDownload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:background="@drawable/button_background"
                    android:letterSpacing="0.16"
                    android:text="Download"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="40"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/layoutDocument"
                app:layout_constraintStart_toStartOf="@id/layoutDocument"
                app:layout_constraintTop_toBottomOf="@+id/layoutDocument"
                app:layout_constraintVertical_bias="0.3"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btnApprove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="33"
                            android:text="Approve"
                            android:backgroundTint="#45C560"
                            android:focusable="false"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btnReject"
                            />
                        <Button
                            android:id="@+id/btnReject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reject"
                            android:backgroundTint="#FF3939"
                            android:focusable="false"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintStart_toEndOf="@id/btnApprove"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/btnDeliverToHOD"/>
                        <Button
                            android:id="@+id/btnDeliverToHOD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deliver to HOD"
                            android:backgroundTint="#F07421"
                            android:focusable="false"
                            android:textSize="@dimen/_8sdp"
                            app:layout_constraintStart_toEndOf="@id/btnReject"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>